<ui:FluentWindow x:Class="Monolith.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:Monolith"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
                 Title="MainWindow" Height="540" Width="800" Topmost="False">
    <Grid>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="200" CornerRadius="8" Margin="20,50,20,20" VerticalAlignment="Top" Background="Black">
                <Grid>
                    <StackPanel Margin="48,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent">
                        <ui:TextBlock FontTypography="Title" Text="Monolith" />
                        <ui:TextBlock FontTypography="Subtitle" Text="Windows Installation Tool" />
                        <ui:TextBlock FontTypography="BodyStrong" Text="Comprehensive tool to install Windows without USB." />
                    </StackPanel>
                    <Image Source="pack://application:,,,/Assets/icon.png" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Right" Margin="0,0,40,0" />
                </Grid>
            </Border>

            <Grid x:Name="pageHome" Grid.Row="1" Margin="30,0,0,0" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Padding="16" Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Height="80" CornerRadius="8" Margin="-10,-10,20,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image Source="{DynamicResource windowslogoDrawingImage}" Height="28" Width="28" Margin="0,0,10,0" />

                        <StackPanel Grid.Column="1" Margin="5">
                            <ui:TextBlock FontTypography="BodyStrong" Text="Current OS:" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                            <ui:TextBlock FontTypography="Caption" Text="Windows 10 LTSC (19045.4376)" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Padding="16" Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Height="80" CornerRadius="8" Margin="-10,0,20,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Symbol="SlideSettings24" FontSize="30" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0" />

                        <StackPanel Grid.Column="1" Margin="5">
                            <ui:TextBlock FontTypography="BodyStrong" Text="Metro Bootloader:" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                            <ui:TextBlock FontTypography="Caption" Text="Enabled" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Padding="16" Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Height="80" CornerRadius="8" Margin="-10,-10,20,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Symbol="Power28" FontSize="30" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0" />

                        <StackPanel Grid.Column="1" Margin="5">
                            <ui:TextBlock FontTypography="BodyStrong" Text="Bootloader Path:" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                            <ui:TextBlock FontTypography="Caption" Text="C:\Windows\system32\winload.efi" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Padding="16" Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Height="80" CornerRadius="8" Margin="-10,0,20,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <ui:SymbolIcon Symbol="Timer28" FontSize="30" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,10,0" />

                        <StackPanel Grid.Column="1" Margin="5">
                            <ui:TextBlock FontTypography="BodyStrong" Text="Bootloader Count Down Time:" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                            <ui:TextBlock FontTypography="Caption" Text="30 Seconds" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="pageSelectImage" Grid.Row="1" Margin="30,0,0,0" Visibility="Collapsed">
                <ui:TextBlock FontTypography="Subtitle" Text="Select Image File"/>

                <Grid>
                    <Rectangle Cursor="Hand" StrokeDashArray="8.0 8.0" Stroke="DimGray" RadiusX="10" RadiusY="10" Height="110" Margin="0,0,20,0"/>
                    <ui:TextBlock FontTypography="Body" Text="Drag and drop image file here (.iso, .esd, .wim, .swm) or click to browse." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button x:Name="btnBrowseImage" Style="{DynamicResource BrowseBtn}" AllowDrop="True" Drop="btnBrowseImage_Drop" Click="btnBrowseImage_Click" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Height="110" Width="750" Margin="0,0,20,0">
                        <Button.Background>
                            <SolidColorBrush Color="#D0D1ED" Opacity="0.08" />
                        </Button.Background>
                    </Button>
                </Grid>

            </Grid>

            <Grid x:Name="pageInstallParameters" Grid.Row="1" Margin="30,0,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <ui:TextBlock FontTypography="Subtitle" Text="Installation Parameters"/>

                <TextBox Grid.Row="2" IsReadOnly="True" />
                
            </Grid>

            <ui:Button x:Name="btnStartInstall" Content="Start Installation" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Margin="0,0,20,20" />
            <ui:Button x:Name="btnNext" Content="Next" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="150" Margin="0,0,20,20" Visibility="Collapsed" />

        </Grid>

        <ui:TitleBar Title="Monolith" CanMaximize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/icon.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <ui:SnackbarPresenter x:Name="SnackbarHost"  />
    </Grid>
</ui:FluentWindow>